<!DOCTYPE html>
<html>
<head>
  <title>Flix</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="row-fluid">
    <div class="span12">
      <%= render "layouts/header" %>
      <div class="row-fluid">
        <div class="span2">
          <%= render "layouts/sidebar" %>
        </div>
        <div class="span10"
          <%= yield %>
        </div>
    </div>

    <div class="span12">
      <%= render "layouts/footer" %>
    </div>
  </div>

</body>
</html>
